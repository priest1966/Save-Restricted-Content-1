# =============================================================================
# TELEGRAM RESTRICTED CONTENT DOWNLOADER BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# SECTION 1: TELEGRAM API CREDENTIALS (REQUIRED)
# =============================================================================
# Get these from https://my.telegram.org/apps
# -----------------------------------------------------------------------------
API_ID=1234567                               # Your API ID (integer)
API_HASH=your_api_hash_here                  # Your API Hash (32 characters)
BOT_TOKEN=your_bot_token_here                # Bot token from @BotFather


# =============================================================================
# SECTION 2: DATABASE CONFIGURATION (MONGODB)
# =============================================================================
# MongoDB connection settings
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017          # MongoDB connection string
MONGODB_DB_NAME=save_restricted_bot            # Database name
MONGODB_POOL_SIZE=50                           # Max connections in pool
MONGODB_MIN_POOL_SIZE=10                       # Min connections in pool
MONGODB_MAX_IDLE_TIME=30000                    # Max idle time (ms)


# =============================================================================
# SECTION 3: ADMIN & LOGGING
# =============================================================================
# Admin configuration and logging settings
# -----------------------------------------------------------------------------
ADMINS=123456789,987654321                     # Admin user IDs (comma separated)
LOG_CHANNEL=-1001234567890                     # Channel for bot logs (optional)
ERROR_MESSAGE=True                             # Show detailed error messages


# =============================================================================
# SECTION 4: DOWNLOAD CONFIGURATION
# =============================================================================
# Settings for download/upload operations
# -----------------------------------------------------------------------------
WAITING_TIME=2                                  # Delay between downloads (seconds)
MAX_FILE_SIZE=2000                              # Maximum file size in MB
MAX_BATCH_SIZE=1000000000000                    # Maximum batch size
DOWNLOAD_TIMEOUT=300                            # Download timeout (seconds)
UPLOAD_TIMEOUT=300                              # Upload timeout (seconds)


# =============================================================================
# SECTION 5: SESSION CONFIGURATION
# =============================================================================
# User session and authentication settings
# -----------------------------------------------------------------------------
LOGIN_SYSTEM=True                                # True: individual login, False: global session
STRING_SESSION=                                  # Global session string (if LOGIN_SYSTEM=False)

# Encryption key for session data (REQUIRED if LOGIN_SYSTEM=True)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_32_byte_encryption_key_here_base64_encoded


# =============================================================================
# SECTION 6: CHANNEL CONFIGURATION
# =============================================================================
# Target channels for forwarded content
# -----------------------------------------------------------------------------
CHANNEL_ID=-1001234567890                        # Default target channel
ENABLE_GLOBAL_CHANNEL=False                      # Enable global channel feature
GLOBAL_CHANNEL_ID=-1001234567890                 # Global channel ID (if enabled)


# =============================================================================
# SECTION 7: RATE LIMITING
# =============================================================================
# Rate limiting settings to prevent abuse
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=True                           # Enable rate limiting
RATE_LIMIT_REQUESTS=10                            # Max requests per window
RATE_LIMIT_WINDOW=60                              # Time window in seconds


# =============================================================================
# SECTION 8: UI & ANIMATIONS
# =============================================================================
# Progress display and animation settings
# -----------------------------------------------------------------------------
ANIMATION_SPEED=1.0                                # Animation speed multiplier
DEFAULT_PROGRESS_STYLE=modern                      # modern|gradient|block|circle|square|arrow
ENABLE_WAVE_ANIMATION=True                         # Enable wave effect animations
PROGRESS_BAR_LENGTH=15                             # Length of progress bars
UPDATE_INTERVAL=1                                  # Progress update interval (seconds)


# =============================================================================
# SECTION 9: FILE MANAGEMENT & CLEANUP
# =============================================================================
# Temporary file handling and cleanup
# -----------------------------------------------------------------------------
CLEANUP_INTERVAL=3600                                # Cleanup interval (seconds)
FILE_RETENTION_TIME=3600                             # How long to keep files (seconds)
MAX_DOWNLOAD_DIR_SIZE=1024                           # Max download directory size (MB)
TEMP_DOWNLOAD_PATH=downloads                         # Temporary download directory
AUTO_CLEANUP=True                                    # Auto cleanup temp files


# =============================================================================
# SECTION 10: BACKUP CONFIGURATION
# =============================================================================
# Database and session backup settings
# -----------------------------------------------------------------------------
BACKUP_ENABLED=True                                   # Enable automatic backups
BACKUP_INTERVAL=86400                                 # Backup interval (seconds)
BACKUP_DIR=backups                                    # Backup directory
MAX_BACKUP_COUNT=10                                   # Number of backups to keep
BACKUP_COMPRESSION=True                               # Compress backups


# =============================================================================
# SECTION 11: PERFORMANCE TUNING
# =============================================================================
# Performance optimization settings
# -----------------------------------------------------------------------------
WORKERS=20                                               # Number of worker threads
MAX_CONCURRENT_TRANSMISSIONS=3                           # Max concurrent uploads/downloads
SLEEP_THRESHOLD=10                                       # Sleep threshold for rate limits
CONNECTION_TIMEOUT=30                                    # Connection timeout (seconds)
MAX_RETRIES=3                                            # Max retry attempts
RETRY_DELAY=5                                            # Delay between retries (seconds)


# =============================================================================
# SECTION 12: FEATURE TOGGLES
# =============================================================================
# Enable/disable specific features
# -----------------------------------------------------------------------------
ENABLE_STATISTICS=True                                    # Track user statistics
ENABLE_HEALTH_MONITORING=True                             # Monitor bot health
ENABLE_AUTO_RESTART=True                                  # Auto restart on crash
ENABLE_FILE_FILTERS=True                                  # Enable file type filters
ENABLE_CUSTOM_CAPTIONS=True                               # Enable custom captions
ENABLE_CUSTOM_THUMBNAILS=True                             # Enable custom thumbnails
ENABLE_BATCH_PROCESSING=True                              # Enable batch downloads
ENABLE_PAUSE_RESUME=True                                  # Enable pause/resume feature


# =============================================================================
# SECTION 13: SECURITY SETTINGS
# =============================================================================
# Security and access control
# -----------------------------------------------------------------------------
REQUIRE_AUTH=False                                         # Require authentication
ALLOWED_USERS=                                             # Comma separated user IDs (empty = all)
BLOCKED_USERS=                                             # Comma separated blocked user IDs
MAX_LOGIN_ATTEMPTS=3                                       # Max login attempts
LOGIN_TIMEOUT=600                                          # Login timeout (seconds)
SESSION_VALIDITY_DAYS=30                                   # Session validity in days


# =============================================================================
# SECTION 14: WEBHOOK CONFIGURATION (optional)
# =============================================================================
# Webhook settings (if using webhooks instead of polling)
# -----------------------------------------------------------------------------
USE_WEBHOOK=False                                            # Use webhooks instead of polling
WEBHOOK_URL=https://your-domain.com/webhook                  # Webhook URL
WEBHOOK_PORT=8443                                            # Webhook port
WEBHOOK_PATH=/webhook                                        # Webhook path
WEBHOOK_CERT=                                                # Path to SSL certificate
WEBHOOK_KEY=                                                 # Path to SSL private key


# =============================================================================
# SECTION 15: PROXY CONFIGURATION (optional)
# =============================================================================
# Proxy settings (if behind proxy)
# -----------------------------------------------------------------------------
USE_PROXY=False                                                # Enable proxy
PROXY_TYPE=socks5                                              # Proxy type: http/socks4/socks5
PROXY_HOST=localhost                                           # Proxy host
PROXY_PORT=1080                                                # Proxy port
PROXY_USERNAME=                                                # Proxy username (if required)
PROXY_PASSWORD=                                                # Proxy password (if required)


# =============================================================================
# SECTION 16: NOTIFICATION SETTINGS
# =============================================================================
# Notification preferences
# -----------------------------------------------------------------------------
NOTIFY_ON_START=True                                          # Notify when bot starts
NOTIFY_ON_STOP=True                                           # Notify when bot stops
NOTIFY_ON_ERROR=False                                         # Notify on errors
NOTIFY_ON_COMPLETE=True                                       # Notify on batch completion
NOTIFICATION_CHANNEL=-1001234567890                           # Channel for notifications


# =============================================================================
# SECTION 17: DEVELOPMENT & DEBUGGING
# =============================================================================
# Development and debug settings
# -----------------------------------------------------------------------------
DEBUG_MODE=False                                               # Enable debug mode
VERBOSE_LOGS=False                                             # Enable verbose logging
LOG_LEVEL=INFO                                                 # Log level: DEBUG, INFO, WARNING, ERROR
SAVE_PROGRESS_STATE=True                                       # Save progress to database
TRACE_API_CALLS=False                                          # Trace all API calls


# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. Never share your .env file or commit it to version control
# 2. Always use strong, unique passwords and encryption keys
# 3. Keep your API credentials secure
# 4. Regularly backup your database
# 5. Monitor your bot's resource usage
# =============================================================================